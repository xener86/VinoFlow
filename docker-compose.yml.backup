version: '3.8'

services:
  backend:
    container_name: vinoflow-backend
    build:
      context: ./backend
    restart: unless-stopped
    environment:
      - PORT=3100
      - DATABASE_URL=postgresql://vinoflow_user:VinoFlow2024!@postgresql-server:5432/vinoflow
      - NODE_ENV=production
    networks:
      - vinoflow-network
      - postgresql_postgres-network
      - proxy_net

  frontend:
    container_name: vinoflow-frontend
    build:
      context: .
    restart: unless-stopped
    ports:
      - "5001:80"
    networks:
      - vinoflow-network
      - proxy_net
    depends_on:
      - backend

networks:
  vinoflow-network:
    driver: bridge
  postgresql_postgres-network:
    external: true
  proxy_net:
    external: true
